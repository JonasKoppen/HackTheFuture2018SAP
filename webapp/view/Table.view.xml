<mvc:View
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	controllerName="com.flexso.HackTheFuture.controller.Main"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Table
		headerText="header"
		class="sapUiResponsiveMargin"
		width="auto"
		items="{artifactModel>/array}">
		
		<columns>
			<Column
				width="12em">
				<Text text="artifact_id" />
			</Column>
			<Column
				width="12em">
				<Text text="longitude" />
			</Column>
			<Column
				width="12em">
				<Text text="latitude" />
			</Column>
			<Column
				width="12em">
				<Text text="artifact_signal" />
			</Column>
		</columns>	
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						text="{artifactModel>artifact_id}"/>
					<Text
						text="{artifactModel>longitude}" />
					<Text
						text="{artifactModel>latitude}" />
					<Button text="Send artifact signal to ML" app:coords="{artifactModel>artifact_signal}" press="triggerML"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>